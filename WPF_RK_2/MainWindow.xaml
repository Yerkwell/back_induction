<Window x:Name="mainWindow"  x:Class="WPF_RK_2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Метод обратной индукции" Height="550" Width="825" SizeChanged="Window_SizeChanged">
    <Grid>
        <Button x:Name="Gen_Button" Content="Generate" HorizontalAlignment="Left" Margin="10,63,0,0" VerticalAlignment="Top" Width="75" Click="Gen_Button_Click"/>
        <Button x:Name="Solve_Button" Content="Solve" HorizontalAlignment="Left" Margin="10,88,0,0" VerticalAlignment="Top" Width="75" Click="Solve_Button_Click"/>
        <Border Margin="90,0,0,0" BorderBrush="Black" BorderThickness="1">
            <Canvas Background="White" x:Name="canvas1" Width="426" Height="318" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="0,0,-1,-1"/>
        </Border>
        <Label x:Name="res1" Content="" HorizontalAlignment="Left" Margin="17,141,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="nodeCount" HorizontalAlignment="Left" Height="23" Margin="10,33,0,0" TextWrapping="Wrap" Text="50" VerticalAlignment="Top" Width="75" PreviewTextInput="previewTextInput"/>
        <Label Content="Вершин:" HorizontalAlignment="Left" Margin="6,7,0,0" VerticalAlignment="Top"/>
        <Label Content="Цена игры:" HorizontalAlignment="Left" Margin="10,115,0,0" VerticalAlignment="Top"/>
    </Grid>
</Window>
